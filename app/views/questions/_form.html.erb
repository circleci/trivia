<%= simple_form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <div class='control-group'>
    <%= f.label :body, 'Question Text:', :class =>'control-label' %>
    <div class='controls'>
      <%= f.text_field :body, :class => 'input-large' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :image, 'Image:', :class => 'control-label' %>
    <div class='controls'>
      <%=f.file_field :image, :id => 'lefile', :style => '' %>
      <div class="input-append">
      </div>
    </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn' %>
  </div>
<% end %>
