<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-horizontal">
    <div class="control-group">
      <%= f.label :email, :class => 'control-label', :required => true %>
      <div class="controls">
        <%= f.text_field :email, :autofocus => true, :required => true %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, :class => 'control-label', :required => true %>
      <div class="controls">
        <%= f.text_field :password, :required => true %>
      </div>
    </div>
    <div class='control-group'>
      <%= f.label :remember_me, :class => 'control-label' %>
      <div class='controls'>
      <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
